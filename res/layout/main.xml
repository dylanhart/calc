<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1"
              android:id="@+id/mainLayout"
              android:background="@color/dark_gray">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/display" android:layout_gravity="center_horizontal" android:lines="3"
            android:inputType="none"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:lines="0"
            android:textColor="@color/white"
            android:background="@color/red"
            android:id="@+id/errorText" android:paddingLeft="5dp"
            />
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:stretchColumns="*"
            android:shrinkColumns="*" android:id="@+id/keypadLayout">
    </TableLayout>
</LinearLayout>

